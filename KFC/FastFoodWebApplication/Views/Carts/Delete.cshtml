@model KFCApplication.Models.Cart

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="delete-confirm-container">
    <h3>Are you sure you want to delete this?</h3>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dish)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dish.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.size)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.size)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CartId" />
        <input type="submit" value="Delete" class="btn btn-danger delete-button" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<style>
    .delete-confirm-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .delete-confirm-container h3 {
            color: #d9534f;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .delete-confirm-container h4 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .delete-confirm-container hr {
            margin: 20px 0;
            border-color: #ccc;
        }

        .delete-confirm-container dl {
            margin-bottom: 20px;
        }

        .delete-confirm-container dt {
            font-weight: bold;
        }

        .delete-confirm-container dd {
            margin-bottom: 10px;
        }

    .delete-button {
        background-color: #d9534f;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

        .delete-button:hover {
            background-color: #c9302c;
        }

    .btn-secondary {
        background-color: #5bc0de;
        color: white;
        padding: 10px 20px;
        border-radius: 4px;
        text-decoration: none;
    }

        .btn-secondary:hover {
            background-color: #31b0d5;
            color: white;
        }
</style>

<h1 style="margin-left: 100px">Your shopping cart</h1>

<table class="table" style="margin-left: 100px">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Quantity
            </th>
            <th>
                Size
            </th>

@model IEnumerable<KFCApplication.Models.Voucher>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <a asp-action="Index" asp-controller="Dishes" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">MANAGEMENT</span>
                </a>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li>
                        <a asp-action="ViewChart" asp-controller="Orders" class="nav-link px-0 "> <span class="d-none d-sm-inline text-white">Daily Report</span>  </a>
                    </li>
                    <li class="w-100">
                        <a asp-action="Index" asp-controller="Dishes" class="nav-link px-0 "> <span class="d-none d-sm-inline text-white">Dishes</span>  </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="DishTypes" class="nav-link px-0"> <span class="d-none d-sm-inline text-white">Dish Type</span>  </a>
                    </li>
                    <li>
                        <a asp-action="ManageOrder" asp-controller="Orders" class="nav-link px-0">
                            <span class="d-none d-sm-inline text-white">Orders</span>
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Vouchers" class="nav-link px-0">
                            <span class="d-none d-sm-inline text-blue">Vouchers</span>
                        </a>
                    </li>
                </ul>
                <hr>
            </div>
        </div>
        <div class="col py-3">
            @* <div class="container">
                <ul class="responsive-table1">
                    <a asp-action="Create" asp-controller="Vouchers">
                    <li class="table-header">
                        <div class="col col-12 th">ADD NEW VOUCHER</div>
                    </li></a>
                </ul>
            </div> *@

            <div class="container">
                <ul class="responsive-table1">
                    <li style="justify-content: right; font-weight: 600">
                        <a asp-action="Create" asp-controller="Vouchers">
                            <img src="/images/addvoucher.png" style="width: 70px; height: 70px;">
                        </a>
                        New Voucher
                    </li>
                </ul>
            </div>
            
            <div class="container">
                <ul class="responsive-table">
                    <li class="table-header">
                        <div class="col col-2 th">Code</div>
                        <div class="col col-2 th">Name</div>
                        <div class="col col-2 th">Description</div>
                        <div class="col col-1 th">Amount</div>
                        <div class="col col-1 th">Quantity</div>
                        <div class="col col-2 th">Action</div>

                    </li>
                    @foreach (var item in Model)
                    {

                        <li class="table-row">
                            <div class="col col-2" data-label="Job Id">@item.Code</div>
                            <div class="col col-2" data-label="Customer Name">@item.Name</div>
                            <div class="col col-2">@item.Description</div>
                            <div class="col col-1">@item.Amount</div>
                            <div class="col col-1">@item.Quantity</div>

                            <div class="col col-2">
                                <a asp-action="Edit" asp-route-id="@item.ID"><img src="/images/editicon.png" style="width: 23px; height:23px;"></img></a>
                                <a asp-action="Details" asp-route-id="@item.ID"> <img src="/images/detailicon2.png" style="width: 25px; height:25px;"></img></a>
                                <a asp-action="Delete" asp-route-id="@item.ID"><img src="~/images/deleteicon.png" style="width: 23px; height:23px;"> </img></a>
                            </div>


                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>


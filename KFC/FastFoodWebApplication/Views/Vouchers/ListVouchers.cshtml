@inject FastFoodWebApplication.Data.FastFoodWebApplicationContext DBContext
@{
    string userName = User.Identity.Name;
    var user = DBContext.Users.SingleOrDefault(u => u.UserName == userName);

    // Check if the user is authenticated
    var isUserAuthenticated = user != null;

    var voucher = DBContext.Voucher.ToList();
    var vouchersOfUser = isUserAuthenticated
        ? DBContext.UserVoucher
            .Where(c => c.UserId == user.Id)
            .Select(c => c.VoucherId)
            .ToList()
        : new List<int>();

    foreach (var item in Model)
    {
        bool isVoucherOfUser = vouchersOfUser.Contains(item.ID);
        <div class="container" style="padding: 5px">
            <div class="card">
                <div class="main">
                    <div class="co-img">
                        <img src="~/images/voucher.png" alt="Discount Icon" style="width: 80px; height: 80px;" />
                    </div>
                    <div class="content">
                        <h2>@item.Name</h2>
                        <h1>@item.Amount% <span>Coupon</span></h1>
                        <p>Quantities are limited!</p>
                    </div>
                </div>
                <div class="copy-button">
                    <input id="copyvalue-@item.ID" type="text" readonly value="@item.Code" />
                    @if (isVoucherOfUser)
                    {
                        <button onclick="copyIt('@item.ID')" class="copybtn" disabled>
                            Saved
                        </button>
                    }
                    else
                    {
                        <button onclick="copyIt('@item.ID')" class="copybtn">
                            <a asp-action="saveVoucher" asp-controller="Vouchers" asp-route-codeID="@item.ID">
                                Save
                            </a>
                        </button>
                    }
                </div>
            </div>
        </div>
    }
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    .card {
        width: 350px;
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        padding: 15px;
        margin-bottom: 10px;
        border: 1px solid #e1e1e1;
    }

    .main {
        display: flex;
        align-items: center;
    }

    .co-img img {
        width: 80px;
        height: 80px;
        margin-right: 15px;
    }

    .content h1 {
        font-size: 24px;
        margin: 5px 0;
        color: #333;
    }

        .content h1 span {
            font-size: 16px;
            color: #666;
        }

    .content h2 {
        font-size: 18px;
        margin: 5px 0;
        color: #555;
    }

    .content p {
        font-size: 14px;
        color: #777;
        margin: 5px 0;
    }

    .copy-button {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

        .copy-button input {
            width: 200px;
            height: 30px;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 5px;
            font-size: 14px;
        }

        .copy-button button {
            padding: 5px 15px;
            background-color: #dc143c;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 14px;
            cursor: pointer;
        }

            .copy-button button[disabled] {
                background-color: #ccc;
                cursor: not-allowed;
            }

        .copy-button a {
            color: #fff;
            text-decoration: none;
        }
</style>

<script>
    function copyIt(itemId) {
        var copyText = document.getElementById("copyvalue-" + itemId);
        copyText.select();
        copyText.setSelectionRange(0, 99999); /* For mobile devices */
        document.execCommand("copy");
        alert("Copied the text: " + copyText.value);
    }
</script>
